namespace lab2_fra
{
    internal class Program
    {
      static int funcRec1(int a)
        {
            if (a <= 1)
                return 0;
            else
                return funcRec1((a - 2) + 5);
        }
        static void Main(string[] args)
        {

            int a = 6, r;

            r = funcRec1(a);

            Console.WriteLine(r);

            Console.ReadKey();
        }
    }
}


